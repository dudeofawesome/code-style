{
  "name": "code-style-monorepo",
  "description": "My code style configs",
  "version": "1.3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dudeofawesome/code-style.git"
  },
  "bugs": {
    "url": "https://github.com/dudeofawesome/code-style/issues"
  },
  "homepage": "https://github.com/dudeofawesome/code-style#readme",
  "author": "Louis Orleans <louis@orleans.io>",
  "license": "MIT",
  "keywords": [
    "style",
    "lint",
    "config",
    "format"
  ],
  "workspaces": [
    "code-style",
    "create-configs",
    "eslint-config",
    "eslint-config-browser",
    "eslint-config-cli",
    "eslint-config-jest",
    "eslint-config-node",
    "eslint-config-react",
    "eslint-config-typescript",
    "javascript-configs",
    "stylelint-config",
    "stylelint-config-scss",
    "typescript-configs",
    "utils"
  ],
  "type": "module",
  "bin": {
    "bump": "scripts/bump.ts"
  },
  "scripts": {
    "bump": "scripts/bump.ts",
    "upgrade-packages": "scripts/upgrade-packages.sh",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces --if-present && eslint ."
  },
  "devDependencies": {
    "@dudeofawesome/code-style": "^1.0.0",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.8.4",
    "tsm": "^2.3.0",
    "yargs": "^17.7.2"
  },
  "overrides": {
    "eslint-plugin-import": {
      "tsconfig-paths": "^4.2.0"
    }
  }
}
