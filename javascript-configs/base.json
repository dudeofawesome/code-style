{
  "extends": "@dudeofawesome/typescript-configs/base.json",
  "compilerOptions": {
    //=== MODULES ===//
    "module": "CommonJS",
    "moduleResolution": "node",

    //=== OUTPUT ===//
    // don't transpile js
    "noEmit": true,

    //=== STRICTNESS ===//
    // allow implicit any
    "noImplicitAny": false
  },
  "typeAcquisition": {
    // automatically retrieve
    "enable": true
  }
}
