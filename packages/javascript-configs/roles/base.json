{
  "extends": [
    "@dudeofawesome/typescript-configs/roles/base.json",
    "@dudeofawesome/typescript-configs/layers/commonjs.json"
  ],
  "compilerOptions": {
    //=== OUTPUT ===//
    // don't transpile js
    "noEmit": true,

    //=== STRICTNESS ===//
    // allow implicit any
    "noImplicitAny": false
  },
  "typeAcquisition": {
    // automatically retrieve
    "enable": true
  }
}
